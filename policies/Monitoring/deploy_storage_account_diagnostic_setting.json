                                                    "retentionPolicy": {
                                                        "enabled": false,
                                                        "days": 0
                                                    }
                                                }
                                            ],
                                            "logs": [
                                                {
                                                    "category": "StorageRead",
                                                    "enabled": "[parameters('logsEnabled')]",
                                                    "retentionPolicy": {
                                                        "days": 0,
                                                        "enabled": false
                                                    }
                                                },
                                                {
